<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
<!-- 自定义loading dialog -->  
    <style name="loading_dialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>   
        <item name="android:windowBackground">@drawable/loading_bg</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
    </style> 
    <style name="app_title">
        <item name="android:background">@drawable/rtitlebg</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="app_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_title_text_size</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="app_title_img_back">
        <item name="android:layout_width">@dimen/app_title_img_back</item>
        <item name="android:layout_height">@dimen/app_title_img_back</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@drawable/reback</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="app_title_img_refresh">
        <item name="android:layout_width">@dimen/app_title_img_refresh</item>
        <item name="android:layout_height">@dimen/app_title_img_refresh</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/refresh</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style> 
        <style name="app_lst_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_lst_item_title_text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="app_lst_item_second_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_lst_item_title_s_text_size</item>
        <item name="android:textColor">#666666</item>
    </style>
        <style name="app_lst_item_img">
        <item name="android:layout_width">@dimen/app_item_list_img</item>
        <item name="android:layout_height">@dimen/app_item_list_img</item>
        <item name="android:layout_margin">@dimen/app_item_list_img_margin</item>
    </style>
</resources>